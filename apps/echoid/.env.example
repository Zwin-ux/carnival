# Bonelli ID - Vercel deployment environment template
# Copy to .env or .env.local and supply real values before deploying.

# Public app metadata
NEXT_PUBLIC_APP_NAME="Bonelli ID"
NEXT_PUBLIC_DEFAULT_NETWORK="polkadot"
NEXT_PUBLIC_IPFS_GATEWAY="https://ipfs.io/ipfs"

# Web3.storage API token for trait + avatar uploads
WEB3_STORAGE_TOKEN="replace-with-web3-storage-token"

# Optional: Supabase / database connection for reputation indexer
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="replace-with-service-role-key"

# Optional: Redis rate limiter connection string
UPSTASH_REDIS_REST_URL="https://your-redis-url"
UPSTASH_REDIS_REST_TOKEN="replace-with-redis-token"
