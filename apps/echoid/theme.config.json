{
  "theme": "Carnival Tech",
  "description": "A unified hackathon carnival theme combining neon mint, dark indigo, glowing gradients, and glassy borders",

  "colors": {
    "primary": {
      "marquee": "#F43F5E",
      "mint": "#34D399",
      "indigo": "#4F46E5",
      "violet": "#8B5CF6"
    },
    "accent": {
      "twist": "#F59E0B",
      "candy": "#EC4899",
      "ticket": "#FBBF24",
      "cotton": "#FDE68A"
    },
    "background": {
      "night": "#111827",
      "canvas": "#0B1220",
      "deep": "#0F172A",
      "darker": "#030712"
    },
    "surface": {
      "cream": "#FFF7ED",
      "glass": "rgba(255, 255, 255, 0.05)",
      "glassStrong": "rgba(255, 255, 255, 0.08)"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "rgba(255, 255, 255, 0.90)",
      "muted": "rgba(255, 255, 255, 0.70)",
      "disabled": "rgba(255, 255, 255, 0.50)"
    }
  },

  "gradients": {
    "carnival": "linear-gradient(135deg, #F43F5E 0%, #F59E0B 50%, #EC4899 100%)",
    "neon": "linear-gradient(135deg, #34D399 0%, #10B981 100%)",
    "indigo": "linear-gradient(135deg, #4F46E5 0%, #8B5CF6 100%)",
    "twilight": "linear-gradient(180deg, #1F2937 0%, #0F172A 100%)",
    "aurora": "linear-gradient(135deg, #F43F5E 0%, #8B5CF6 50%, #34D399 100%)",
    "sunset": "linear-gradient(135deg, #F59E0B 0%, #F43F5E 100%)",
    "ticket": "linear-gradient(135deg, #FBBF24 0%, #F59E0B 100%)"
  },

  "shadows": {
    "glow": {
      "red": "0 0 20px rgba(244, 63, 94, 0.5), 0 0 40px rgba(244, 63, 94, 0.3)",
      "mint": "0 0 20px rgba(52, 211, 153, 0.5), 0 0 40px rgba(52, 211, 153, 0.3)",
      "violet": "0 0 20px rgba(139, 92, 246, 0.5), 0 0 40px rgba(139, 92, 246, 0.3)",
      "ticket": "0 0 20px rgba(251, 191, 36, 0.5), 0 0 40px rgba(251, 191, 36, 0.3)"
    },
    "elevation": {
      "sm": "0 2px 8px rgba(0, 0, 0, 0.15)",
      "md": "0 4px 16px rgba(0, 0, 0, 0.2)",
      "lg": "0 8px 32px rgba(0, 0, 0, 0.3)",
      "xl": "0 16px 64px rgba(0, 0, 0, 0.4)"
    },
    "glass": "0 8px 32px rgba(0, 0, 0, 0.1)"
  },

  "spacing": {
    "rhythm": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem"
    }
  },

  "borderRadius": {
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },

  "transitions": {
    "fast": "150ms cubic-bezier(0.4, 0, 0.2, 1)",
    "base": "200ms cubic-bezier(0.4, 0, 0.2, 1)",
    "slow": "300ms cubic-bezier(0.4, 0, 0.2, 1)",
    "spring": "500ms cubic-bezier(0.34, 1.56, 0.64, 1)"
  },

  "animations": {
    "marquee": {
      "duration": "2s",
      "timing": "ease-in-out",
      "iteration": "infinite"
    },
    "glow": {
      "duration": "2s",
      "timing": "ease-in-out",
      "iteration": "infinite"
    },
    "float": {
      "duration": "6s",
      "timing": "ease-in-out",
      "iteration": "infinite"
    },
    "bounce": {
      "duration": "0.5s",
      "timing": "ease-in-out",
      "iteration": "1"
    },
    "rotate": {
      "duration": "20s",
      "timing": "linear",
      "iteration": "infinite"
    }
  },

  "typography": {
    "fontFamily": {
      "sans": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "mono": "'Fira Code', 'Cascadia Code', 'Courier New', monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    }
  },

  "effects": {
    "backdrop": {
      "blur": {
        "sm": "blur(8px)",
        "md": "blur(20px)",
        "lg": "blur(30px)"
      }
    },
    "patterns": {
      "awningStripes": "repeating-linear-gradient(45deg, #F43F5E, #F43F5E 20px, #FFF7ED 20px, #FFF7ED 40px)",
      "dottedLights": "radial-gradient(circle, #FBBF24 2px, transparent 2px)",
      "gridPattern": "linear-gradient(rgba(255,255,255,0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.05) 1px, transparent 1px)"
    }
  }
}
